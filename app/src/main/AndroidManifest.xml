<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.espressomachineapp">

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" /> <!-- <uses-feature -->
    <!-- android:name="android.hardware.sensor.compass" -->
    <!-- android:required="true" /> -->
    <uses-permission android:name="android.permission.RECORD_AUDIO " />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomeScreenForBlindPeople"></activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WaterMilkSaveForFavoritesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WaterMilkMakerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CoffeeMonthlyConsumptionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CoffeeMakerForSavingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectCoffeeForFavorites"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CoffeeLoadingScreen"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CoffeeMakerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FavoritesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StockProductsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StoresActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SelectCoffeeActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>